    }                                   
 
    public void eleccion(){

    int sobra,sobra1,sobra2,sobra3;
        switch(pedir){
            case 1: p1 = new Productos(cant, Integer.parseInt(t9.getText()), Double.parseDouble(t13.getText()));
            JOptionPane.showMessageDialog(null, "El valor a cancelar es: "+p1.precioPagar());
            can1 = Integer.parseInt(t5.getText());
            sobra = can1-cant;
            proVendi1 = proVendi1+cant;
            t5.setText(sobra+"");
            break;
            
            case 2: p2 = new Productos(cant, Integer.parseInt(t10.getText()), Double.parseDouble(t14.getText()));
            JOptionPane.showMessageDialog(null, "El valor a cancelar es: "+p2.precioPagar());
            can2 = Integer.parseInt(t6.getText());
            sobra1 = can2-cant;
            proVendi2 = proVendi2+cant;
            t6.setText(sobra1+"");
            break;
            
            case 3: p3 = new Productos(cant, Integer.parseInt(t11.getText()), Double.parseDouble(t15.getText()));
            JOptionPane.showMessageDialog(null, "El valor a cancelar es: "+p3.precioPagar());
            can3 = Integer.parseInt(t7.getText());
            sobra2 = can3-cant;
            proVendi3 = proVendi3+cant;
            t7.setText(sobra2+"");
            break;
            
            case 4: p4 = new Productos(cant, Integer.parseInt(t12.getText()), Double.parseDouble(t16.getText()));
            JOptionPane.showMessageDialog(null, "El valor a cancelar es: "+p4.precioPagar());
            can4 = Integer.parseInt(t8.getText());
            sobra3 = can4-cant;
            proVendi4 = proVendi4+cant;
            t8.setText(sobra3+"");
            break;
        }
       
    }
    public void ingresosTotales(){
          switch (pedir){
          case 1: pr1 = pr1+p1.ingresosT(); 
          ingre = pr1+pr2+pr3+pr4; 
          t17.setText(ingre+"");  
          break;
          case 2: pr2 = pr2+p2.ingresosT();
          ingre = pr1+pr2+pr3+pr4; 
          t17.setText(ingre+"");  
          break;
          case 3: pr3 = pr3+p3.ingresosT();
          ingre = pr1+pr2+pr3+pr4; 
          t17.setText(ingre+"");  
          break;
          case 4: pr4 = pr4+p4.ingresosT();
          ingre = pr1+pr2+pr3+pr4; 
          t17.setText(ingre+"");  
          break;
      }
        
    }
    
    public void mayor(){
        
      if(proVendi1>proVendi2 && proVendi1>proVendi3  && proVendi1>proVendi4 ){    
          t18.setText(t1.getText());     
      }
      if(proVendi2>proVendi1 && proVendi2>proVendi3  && proVendi2>proVendi4 ){     
          t18.setText(t2.getText());     
      }
      if(proVendi3>proVendi1 && proVendi3>proVendi2  && proVendi3>proVendi4 ){    
          t18.setText(t3.getText());     
      }
      if(proVendi4>proVendi1 && proVendi4>proVendi2  && proVendi4>proVendi3 ){    
          t18.setText(t4.getText());     
      }          
    }
    
    public void menor(){
        
      if(proVendi1<proVendi2 && proVendi1<proVendi3  && proVendi1<proVendi4 ){    
          t19.setText(t1.getText());     
      }
      if(proVendi2<proVendi1 && proVendi2<proVendi3  && proVendi2<proVendi4 ){     
          t19.setText(t2.getText());     
      }
      if(proVendi3<proVendi1 && proVendi3<proVendi2  && proVendi3<proVendi4 ){    
          t19.setText(t3.getText());     
      }
      if(proVendi4<proVendi1 && proVendi4<proVendi2  && proVendi4<proVendi3 ){    
          t19.setText(t4.getText());     
      } 

    }
    public void cantidad(){
          switch (pedir){
          case 1: cant = Integer.parseInt(JOptionPane.showInputDialog("Qué cantidad desea comprar "
                + "\npara el producto: "+ t1.getText()));  
                eleccion();
                ingresosTotales();
          break;
          case 2:cant = Integer.parseInt(JOptionPane.showInputDialog("Qué cantidad desea comprar "
                + "\npara el producto: "+ t2.getText()));
                eleccion();
                ingresosTotales();
          break;
          case 3:cant = Integer.parseInt(JOptionPane.showInputDialog("Qué cantidad desea comprar "
                + "\npara el producto: "+ t3.getText()));             
                eleccion();
                ingresosTotales();
          break;
          case 4:cant = Integer.parseInt(JOptionPane.showInputDialog("Qué cantidad desea comprar "
                + "\npara el producto: "+ t4.getText())); 
                eleccion(); 
                ingresosTotales();
          break;
      }
    }
        
    
