    private void button1ActionPerformed(java.awt.event.ActionEvent evt) {                                        
       do{
       pedir = Integer.parseInt(JOptionPane.showInputDialog("Que producto desea pedir:"
                 + "\nSeleccione su producto de 1-4: "
                 + "\n1. "+t1.getText()
                 + "\n2. "+t2.getText()
                 + "\n3. "+t3.getText()
                 + "\n4. "+t4.getText()));
       }while(pedir<1 || pedir>4);
       
       
    }                                       

    private void button3ActionPerformed(java.awt.event.ActionEvent evt) {                                        
        JOptionPane.showMessageDialog(null, "Adios Erick");
        System.exit(0);
    }                                       

    private void button2ActionPerformed(java.awt.event.ActionEvent evt) {                                        
     
        cantidad();
        JOptionPane.showMessageDialog(null, "Compra exitosa.");       
    }                                       

    private void button4ActionPerformed(java.awt.event.ActionEvent evt) {                                        
     
      mayor();
      menor();       
    }                                       

    private void t10ActionPerformed(java.awt.event.ActionEvent evt) {                                    
